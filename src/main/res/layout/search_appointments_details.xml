<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/searchvisitor_name_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="Search By Name"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/searchvisitor_name_Til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:visibility="gone">

            <EditText
                android:id="@+id/searchvisitor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Visitor Name" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/searchvisitor_mobile_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="Search By Mobile"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/searchvisitor_mobile_Til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:visibility="gone">

            <EditText
                android:id="@+id/searchvisitor_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Visitor Mobile"
                android:inputType="phone"
                android:maxLength="10" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/searchvisitor_tomeet_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="Search By To Meet"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/searchvisitor_tomeet_Til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:visibility="gone">

            <AutoCompleteTextView
                android:id="@+id/searchvisitor_tomeet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Visitor ToMeet" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:id="@+id/checkindate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/checkindate_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search By Date"
                android:textColor="@android:color/white"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/checkin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/checkindate_Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="New Text"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/checkindate_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:src="@drawable/ic_mode_edit" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/search_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="SEARCH"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="RESET"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>