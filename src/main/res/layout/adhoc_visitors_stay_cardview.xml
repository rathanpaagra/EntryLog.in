<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:foreground="?android:selectableItemBackground"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/adhoc_visitors_card_image"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/adhoc_visitor_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chetan"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adhoc_visitor_card_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adhoc_visitor_card_name"
                android:layout_weight="1"
                android:text="cgani87@gmail.com" />


            <TextView
                android:id="@+id/adhoc_visitor_card_issued_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adhoc_visitor_card_mobile_number"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="9972452488"
                android:textColor="@color/green"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adhoc_visitor_card_expiry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adhoc_visitor_card_issued_date"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textColor="@color/red" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>