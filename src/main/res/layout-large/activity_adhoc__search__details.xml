<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.entrylog.entrylog.main.Search_Details">

    <LinearLayout
        android:id="@+id/adhoc_searchcheckdate_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/adhoc_searchcheckin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/adhoc_tv_checkindate_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CheckInDate: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/adhoc_tv_checkindate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/adhoc_searchcheckout_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/adhoc_tv_checkoutdate_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CheckOutDate: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/adhoc_tv_checkoutdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textSize="21sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/adhoc_searchdetails_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/adhoc_searchname_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/adhoc_tv_visitorname_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visitor Name: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/adhoc_tv_visitorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/adhoc_searchmobile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/adhoc_tv_visitormobile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visitor Mobile: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/adhoc_tv_visitormobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textSize="21sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/adhoc_searchdetails2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/adhoc_searchtomeet_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/adhoc_tv_visitormeet_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visitor ToMeet: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/adhoc_tv_visitormeet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/adhoc_searchvehicle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/adhoc_tv_visitorvehicle_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visitor Vehicle: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/adhoc_tv_visitorvehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textSize="21sp" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/adhoc_searchvisitorsview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vehicle_layout"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>