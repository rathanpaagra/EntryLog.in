<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            >

            <SeekBar
                android:id="@+id/seekBar11"
                android:layout_width="396dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:max="255" />


            <in.entrylog.entrylog.main.camera.MySurfaceView1
                android:id="@+id/sv1"
                android:layout_width="382dp"
                android:layout_height="310dp"
                />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:text="Progress"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="260dp"
                android:layout_height="250dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.31" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/take_pi_btn1"
            android:layout_width="53dp"
            android:layout_height="58dp"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/camera_click"
            android:text="TAKEPIC" />

        <Button
            android:id="@+id/light1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="light"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/save1"
                android:layout_width="53dp"
                android:layout_height="58dp"
                android:layout_marginLeft="1dp"
                android:saveEnabled="true"
                android:src="@mipmap/camera_click_ok"
                android:text="DONE"

                android:layout_weight="0.06" />
            <!--            -->


            <ImageButton
                android:id="@+id/cancel_camera1"
                android:layout_width="53dp"
                android:layout_height="58dp"
                android:src="@mipmap/camera_click_cancel"
                android:text="CANCEL" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
