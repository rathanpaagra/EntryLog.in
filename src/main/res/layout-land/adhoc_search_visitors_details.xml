<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/adhoc_checkindate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/adhoc_checkindate_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Issued Date"
                android:textColor="@android:color/white"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/adhoc_checkin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/adhoc_appointmentdate_Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="New Text"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/adhoc_checkindate_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:src="@drawable/ic_mode_edit" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/adhoc_checkoutdate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/adhoc_checkoutdate_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Expiry Date"
                android:textColor="@android:color/white"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/adhoc_checkout_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/adhoc_checkoutdate_Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="New Text"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/adhoc_checkoutdate_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:src="@drawable/ic_mode_edit" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/adhoc_searchvisitor_name_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search By name"
            android:textColor="@android:color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:visibility="visible" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/adhoc_searchvisitor_name_Til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:visibility="gone">

            <EditText
                android:id="@+id/adhoc_searchvisitor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Visitor Name" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/adhoc_searchvisitor_mobile_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search by Mobile"
            android:textColor="@android:color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:visibility="visible" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/adhoc_searchvisitor_mobile_Til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:visibility="gone">

            <EditText
                android:id="@+id/adhoc_searchvisitor_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Visitor Mobile"
                android:inputType="phone"
                android:maxLength="10" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/adhoc_searchvisitor_tomeet_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search By To Meet"
            android:textColor="@android:color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:visibility="visible" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/adhoc_searchvisitor_tomeet_Til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:visibility="gone">

            <EditText
                android:id="@+id/adhoc_searchvisitor_tomeet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Visitor ToMeet" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/adhoc_searchvisitor_vehicle_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search by Vehicle"
            android:textColor="@android:color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:visibility="visible" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/adhoc_searchvisitor_vehicle_Til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:visibility="gone">

            <EditText
                android:id="@+id/adhoc_searchvisitor_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Visitor Vehicle Number" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/adhoc_search_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="SEARCH"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="0.4"
            android:visibility="gone" />

        <Button
            android:id="@+id/adhoc_reset_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="RESET"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>